<UserControl
    x:Class="MemorijaUniversal.CardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MemorijaUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Button x:ConnectionId='1' x:Name="button1" 
                Grid.Column="1" Grid.Row="1" 
                Width="100" Height="100" 
                Grid.RowSpan="16" 
                Opacity="0.5" 
                                   VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Button.Content>
                <Image x:ConnectionId='2' x:Name="buttonImage" Stretch="Fill" VerticalAlignment="Stretch"/>
            </Button.Content>
        </Button> 
        <!-- V: <TextBlock x:Name="buttonText"></TextBlock>-->
    </Grid>
</UserControl>

